{
  "drawingStandards": {
    "version": "1.0",
    "description": "CAD standards for architectural drawings - defines how building elements are tagged and visually represented",
    "scale": {
      "unit": "meters",
      "pixelsPerMeter": 100,
      "description": "1 meter = 100 pixels in all SVG drawings"
    },
    "elements": {
      "wall-exterior": {
        "description": "Building perimeter/envelope walls - structural, load-bearing",
        "semanticMeaning": "Forms the building boundary between conditioned interior and exterior environment",
        "cssClass": "wall-exterior",
        "visual": {
          "stroke": "black",
          "strokeWidth": 8,
          "fill": "none",
          "style": "solid"
        },
        "properties": {
          "structural": true,
          "loadBearing": true,
          "removable": false,
          "weatherBarrier": true
        },
        "appliesTo": [
          "plan",
          "section",
          "elevation"
        ],
        "vocabulary": "EXTERIOR wall, perimeter wall, envelope wall, structural wall"
      },
      "wall-interior": {
        "description": "Interior partition walls - non-structural room dividers",
        "semanticMeaning": "Divides interior space into rooms but does not define building envelope",
        "cssClass": "wall-interior",
        "visual": {
          "stroke": "gray",
          "strokeWidth": 4,
          "strokeDasharray": "10,5",
          "fill": "none",
          "style": "dashed"
        },
        "properties": {
          "structural": false,
          "loadBearing": false,
          "removable": true,
          "weatherBarrier": false
        },
        "appliesTo": [
          "plan",
          "section"
        ],
        "vocabulary": "INTERIOR wall, partition wall, non-structural wall, room divider"
      },
      "window": {
        "description": "Window openings in walls",
        "semanticMeaning": "Glazed opening providing light and views",
        "cssClass": "window",
        "visual": {
          "stroke": "blue",
          "strokeWidth": 4,
          "fill": "lightblue",
          "opacity": 0.5,
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "removable": true,
          "weatherBarrier": true
        },
        "appliesTo": [
          "plan",
          "section",
          "elevation"
        ],
        "requiredMetadata": {
          "grouping": "recommended",
          "attributes": {
            "id": {
              "required": false,
              "format": "window-{location}",
              "example": "window-north-bedroom",
              "description": "Identifier for the window (optional, use when window needs to be referenced)"
            },
            "data-width": {
              "required": true,
              "type": "number",
              "unit": "meters",
              "example": "1.2",
              "description": "Window width in meters"
            },
            "data-height": {
              "required": true,
              "type": "number",
              "unit": "meters",
              "example": "1.5",
              "description": "Window height in meters"
            },
            "data-sill-height": {
              "required": "for section views",
              "type": "number",
              "unit": "meters",
              "example": "0.9",
              "description": "Height of window sill above floor (standard 0.9m)"
            }
          },
          "childElements": {
            "title": {
              "required": false,
              "format": "Window: {width}m × {height}m",
              "example": "Window: 1.2m × 1.5m"
            },
            "label": {
              "required": true,
              "fontSize": "$ref:typography.fontSizes.standard",
              "fontFamily": "$ref:typography.fontFamilies.primary",
              "fill": "blue",
              "format": "Window ({width}×{height}m)",
              "example": "Window (0.8×1.2m)",
              "description": "Visible text label showing window dimensions"
            }
          }
        }
      },
      "door": {
        "description": "Door openings with swing direction",
        "semanticMeaning": "Opening for passage between spaces",
        "cssClass": "door",
        "visual": {
          "stroke": "brown",
          "strokeWidth": 4,
          "fill": "none",
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "removable": true,
          "weatherBarrier": false
        },
        "appliesTo": [
          "plan"
        ],
        "notes": "Show swing arc to indicate door operation direction",
        "requiredMetadata": {
          "grouping": "required",
          "attributes": {
            "id": {
              "required": true,
              "format": "door-{location}",
              "example": "door-south-wall",
              "description": "Unique identifier for the door"
            },
            "data-width": {
              "required": true,
              "type": "number",
              "unit": "meters",
              "example": "0.9",
              "description": "Door width in meters"
            },
            "data-height": {
              "required": true,
              "type": "number",
              "unit": "meters",
              "example": "2.1",
              "description": "Door height in meters (standard 2.1m)"
            },
            "data-type": {
              "required": true,
              "type": "string",
              "values": [
                "swinging",
                "sliding"
              ],
              "example": "swinging",
              "description": "Door operation type"
            },
            "data-swing-direction": {
              "required": "if type=swinging",
              "type": "string",
              "values": [
                "inward-left",
                "inward-right",
                "outward-left",
                "outward-right"
              ],
              "example": "inward-left",
              "description": "Direction door swings (from exterior view)"
            },
            "data-hinge-side": {
              "required": "if type=swinging",
              "type": "string",
              "values": [
                "left",
                "right"
              ],
              "example": "left",
              "description": "Which side has the hinge"
            }
          },
          "childElements": {
            "title": {
              "required": true,
              "format": "{Location} Door: {width}m × {height}m, {type} {direction}",
              "example": "South Wall Door: 0.9m × 2.1m, swinging inward to the left"
            },
            "label": {
              "required": true,
              "fontSize": "$ref:typography.fontSizes.standard",
              "fontFamily": "$ref:typography.fontFamilies.primary",
              "fill": "brown",
              "format": "Door ({width}×{height}m)",
              "example": "Door (0.9×2.1m)",
              "description": "Visible text label showing door dimensions"
            }
          }
        }
      },
      "door-arc": {
        "description": "Arc showing door swing direction",
        "cssClass": "door-arc",
        "visual": {
          "stroke": "brown",
          "strokeWidth": 2,
          "fill": "none",
          "style": "solid"
        },
        "appliesTo": [
          "plan"
        ]
      },
      "door-sliding": {
        "description": "Sliding door with track indication",
        "semanticMeaning": "Door that slides horizontally along a track, typically glass panels",
        "cssClass": "door-sliding",
        "visual": {
          "stroke": "brown",
          "strokeWidth": 4,
          "fill": "lightblue",
          "opacity": 0.3,
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "removable": true,
          "weatherBarrier": true,
          "glazed": true
        },
        "appliesTo": [
          "plan",
          "elevation"
        ],
        "vocabulary": "sliding door, sliding glass door, patio door",
        "notes": "Show with parallel lines to indicate sliding panels and track",
        "requiredMetadata": {
          "grouping": "required",
          "attributes": {
            "id": {
              "required": true,
              "format": "door-sliding-{location}",
              "example": "door-sliding-north-wall",
              "description": "Unique identifier for the sliding door"
            },
            "data-width": {
              "required": true,
              "type": "number",
              "unit": "meters",
              "example": "2.0",
              "description": "Sliding door width in meters"
            },
            "data-height": {
              "required": true,
              "type": "number",
              "unit": "meters",
              "example": "2.1",
              "description": "Sliding door height in meters"
            },
            "data-type": {
              "required": true,
              "type": "string",
              "values": [
                "sliding"
              ],
              "example": "sliding",
              "description": "Always 'sliding' for this element"
            },
            "data-panels": {
              "required": false,
              "type": "number",
              "example": "2",
              "description": "Number of sliding panels (default 2)"
            }
          },
          "childElements": {
            "title": {
              "required": true,
              "format": "{Location} Sliding Door: {width}m × {height}m",
              "example": "North Wall Sliding Door: 2.0m × 2.1m"
            },
            "label": {
              "required": true,
              "fontSize": "$ref:typography.fontSizes.standard",
              "fontFamily": "$ref:typography.fontFamilies.primary",
              "fill": "brown",
              "format": "Sliding Door ({width}×{height}m)",
              "example": "Sliding Door (2.0×2.1m)",
              "description": "Visible text label showing sliding door dimensions"
            }
          }
        }
      },
      "beam": {
        "description": "Structural beam elements",
        "semanticMeaning": "Horizontal structural member carrying loads",
        "cssClass": "beam",
        "visual": {
          "stroke": "black",
          "strokeWidth": 2,
          "fill": "#8B4513",
          "style": "solid"
        },
        "properties": {
          "structural": true,
          "loadBearing": true,
          "removable": false
        },
        "appliesTo": [
          "section",
          "plan"
        ],
        "vocabulary": "structural beam, loft beam, load-bearing beam"
      },
      "suspended-ceiling": {
        "description": "Suspended ceiling hung from structural beam above",
        "semanticMeaning": "Non-structural ceiling plane suspended below the structural beam at eave level",
        "cssClass": "suspended-ceiling",
        "visual": {
          "stroke": "gray",
          "strokeWidth": 2,
          "strokeDasharray": "5,5",
          "fill": "none",
          "style": "dashed"
        },
        "properties": {
          "structural": false,
          "loadBearing": false,
          "removable": true,
          "attachedTo": "beam"
        },
        "appliesTo": [
          "section"
        ],
        "vocabulary": "suspended ceiling, drop ceiling, false ceiling",
        "notes": "Hung from structural beam at eave level, creates lower ceiling height below beam"
      },
      "insulated-ceiling": {
        "description": "Insulated cathedral ceiling attached to underside of roof",
        "semanticMeaning": "Ceiling board with insulation attached directly to roof structure, following roof slope",
        "cssClass": "insulated-ceiling",
        "visual": {
          "stroke": "#D2B48C",
          "strokeWidth": 3,
          "fill": "none",
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "loadBearing": false,
          "removable": true,
          "attachedTo": "roof",
          "insulated": true
        },
        "appliesTo": [
          "section"
        ],
        "vocabulary": "cathedral ceiling, insulated ceiling, vaulted ceiling",
        "notes": "Follows roof slope, includes insulation layer between roof and ceiling board"
      },
      "roof": {
        "description": "Roof structure and covering - top of building envelope",
        "semanticMeaning": "Forms the top boundary of the building envelope between conditioned interior and exterior environment",
        "cssClass": "roof",
        "visual": {
          "stroke": "black",
          "strokeWidth": 6,
          "fill": "none",
          "style": "solid"
        },
        "properties": {
          "structural": true,
          "loadBearing": true,
          "removable": false,
          "weatherBarrier": true
        },
        "appliesTo": [
          "section",
          "elevation"
        ],
        "vocabulary": "roof envelope, building envelope top, weather barrier"
      },
      "foundation": {
        "description": "Foundation and slab elements - bottom of building envelope",
        "semanticMeaning": "Forms the bottom boundary of the building envelope between conditioned interior and ground/exterior environment",
        "cssClass": "foundation",
        "visual": {
          "stroke": "black",
          "strokeWidth": 2,
          "fill": "#cccccc",
          "style": "solid"
        },
        "properties": {
          "structural": true,
          "loadBearing": true,
          "removable": false,
          "weatherBarrier": true
        },
        "appliesTo": [
          "section"
        ],
        "vocabulary": "foundation envelope, building envelope bottom, slab, weather barrier"
      },
      "dimension-line": {
        "description": "Dimension and measurement lines",
        "cssClass": "dimension-line",
        "visual": {
          "stroke": "blue",
          "strokeWidth": 1,
          "strokeDasharray": "5,5",
          "fill": "none",
          "style": "dashed"
        },
        "appliesTo": [
          "plan",
          "section",
          "elevation"
        ]
      },
      "dimension-text": {
        "description": "Dimension text labels",
        "cssClass": "dimension-text",
        "visual": {
          "fill": "blue",
          "fontFamily": "$ref:typography.fontFamilies.primary",
          "fontSize": "$ref:typography.fontSizes.standard"
        },
        "appliesTo": [
          "plan",
          "section",
          "elevation"
        ]
      },
      "section-cut": {
        "description": "Section cut line indicating where a section view is taken",
        "semanticMeaning": "Shows the location and direction of a section view - where the building is 'cut' to show internal vertical relationships",
        "cssClass": "section-cut",
        "visual": {
          "stroke": "red",
          "strokeWidth": 3,
          "strokeDasharray": "15,10",
          "fill": "none",
          "style": "dashed"
        },
        "properties": {
          "showsViewDirection": true,
          "requiresLabel": true,
          "requiresArrows": true
        },
        "appliesTo": [
          "plan"
        ],
        "notes": "Section cut lines must have: (1) dashed line showing cut location, (2) arrows indicating view direction, (3) label identifying the section (e.g., 'SECTION A-A')"
      },
      "section-arrow": {
        "description": "Arrow markers showing section view direction",
        "semanticMeaning": "Indicates the direction from which the section is viewed",
        "visual": {
          "stroke": "red",
          "strokeWidth": 3,
          "fill": "none",
          "style": "solid"
        },
        "appliesTo": [
          "plan"
        ]
      },
      "section-label": {
        "description": "Text label identifying the section",
        "cssClass": "section-label",
        "visual": {
          "fill": "red",
          "fontFamily": "Arial",
          "fontSize": 14,
          "fontWeight": "bold"
        },
        "appliesTo": [
          "plan"
        ],
        "notes": "Format: 'SECTION A-A', 'SECTION B-B', etc."
      },
      "furniture": {
        "description": "Furniture elements shown for context and scale",
        "semanticMeaning": "Non-structural furnishings that show how spaces will be used",
        "cssClass": "furniture",
        "visual": {
          "stroke": "black",
          "strokeWidth": 2,
          "fill": "#D2B48C",
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "removable": true,
          "contextual": true
        },
        "appliesTo": [
          "section",
          "plan"
        ],
        "notes": "Used to show spatial context - beds, tables, chairs, etc."
      },
      "kitchen-bench": {
        "description": "Kitchen counter/bench with workspace",
        "semanticMeaning": "Fixed kitchen counter providing work surface and storage below",
        "cssClass": "kitchen-bench",
        "visual": {
          "stroke": "black",
          "strokeWidth": 2,
          "fill": "#8B7355",
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "removable": true,
          "fixed": true
        },
        "appliesTo": [
          "plan"
        ],
        "vocabulary": "kitchen counter, kitchen bench, worktop",
        "notes": "Typically 600mm deep, mounted against wall"
      },
      "kitchen-cupboard": {
        "description": "Kitchen cabinet/cupboard storage",
        "semanticMeaning": "Storage cabinets typically below kitchen bench or mounted on walls",
        "cssClass": "kitchen-cupboard",
        "visual": {
          "stroke": "black",
          "strokeWidth": 1,
          "fill": "#A0826D",
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "removable": true,
          "fixed": true
        },
        "appliesTo": [
          "plan",
          "section"
        ],
        "vocabulary": "kitchen cabinet, cupboard, storage unit"
      },
      "human-scale": {
        "description": "Human figure shown for scale reference",
        "semanticMeaning": "Scale reference showing typical human dimensions (1.7m standing height)",
        "cssClass": "human-scale",
        "visual": {
          "stroke": "black",
          "strokeWidth": 2,
          "fill": "none",
          "style": "solid"
        },
        "properties": {
          "structural": false,
          "scaleReference": true,
          "standardHeight": "1.7m"
        },
        "appliesTo": [
          "section"
        ],
        "notes": "Stick figure or simple representation - helps viewers understand scale of spaces"
      }
    },
    "designVocabulary": {
      "description": "Common terms for discussing the design",
      "terms": {
        "envelope": "The complete building boundary separating conditioned interior from exterior environment - includes exterior walls (vertical envelope), roof (top envelope), and foundation (bottom envelope)",
        "perimeter": "The outer boundary of the building footprint",
        "partition": "INTERIOR wall dividing interior space",
        "loadPath": "Route that structural loads travel from roof to foundation",
        "structural": "Element that carries loads and cannot be removed",
        "non-structural": "Element that can be removed without affecting building stability"
      }
    },
    "typography": {
      "description": "Global typography definitions for consistent text rendering across all drawings",
      "fontFamilies": {
        "primary": {
          "name": "Arial",
          "fallback": "Helvetica, sans-serif",
          "description": "Primary font for all labels, dimensions, and annotations"
        },
        "monospace": {
          "name": "Courier New",
          "fallback": "monospace",
          "description": "Monospace font for technical data or coordinates (if needed)"
        }
      },
      "fontSizes": {
        "large": 18,
        "standard": 16,
        "medium": 14,
        "small": 12,
        "tiny": 10
      },
      "notes": "All text elements should reference fontFamilies.primary and appropriate fontSize"
    }
  }
}
